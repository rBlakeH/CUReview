        <tr>
            <td>Class Number</td>
            <td><input type="text" name="upvotes" id="upvotes" value="<%= upvotes %>"/></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" name="Submit" value="update"/></td>
        </tr>
    </table>
</form>

