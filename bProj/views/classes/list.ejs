   <script>
  // bttw: call the increment route handler
  function buttonClickIncrement(id, classnumber) {
    // Increment the vote for a given classnumber
    axios.get('/classes/increment/' + classnumber)
      .then(function (response) {
        document.getElementById(id).innerHTML = response.data.upvotes;
        console.log(response);
      })
      .catch(function (error) {
        console.log(error);
      });
  }

  // bttw: call the decrement route handler
  function buttonClickDecrement(id, classnumber) {
    // Decrement the vote for a given classnumber
    axios.get('/classes/decrement/' + classnumber)
      .then(function (response) {
        document.getElementById(id).innerHTML = response.data.downvotes;
        console.log(response);
      })
      .catch(function (error) {
        console.log(error);
      });
  }
</script>
  


